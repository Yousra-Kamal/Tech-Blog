<div class="py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">

      <h2
        class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl"
      >Your Blog Posts</h2>
      <p class="mt-2 mb-8 text-lg leading-8 text-gray-600">Start your own blog
        üìù</p>
      <div class="centerthisbutton">
        <button
          type="submit"
          class="rounded-md bg-blue-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
        ><a href="/dashboard/new">Create a new post</a></button>
      </div>

      <div class="mt-16 space-y-20 lg:mt-20 lg:space-y-20">
        {{#if posts.length}}

          {{#each posts as |post|}}
            <article
              class="post relative isolate flex flex-col gap-8 lg:flex-row"
            >
              <div
                class="relative aspect-[16/9] sm:aspect-[2/1] lg:aspect-square lg:w-64 lg:shrink-0"
              >

                <img
                  src="../images/desktop2.jpg"
                  alt="desktop image"
                  class="absolute inset-0 h-full w-full rounded-2xl bg-gray-50 object-cover"
                />
                <div
                  class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10"
                ></div>
              </div>

              <div class="container group relative max-w-xl">
                <div
                  class="bg-sky-100 card-header dashboard-post group relative max-w-xl"
                >

                  <h4
                    class="card-title post-title mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600"
                  >
                    <a href="/dashboard/edit/{{id}}">
                      <span class="absolute inset-0"></span>{{post.title}}
                    </a>
                  </h4>
                  <div class="card-body post-body">
                    <p
                      class="card-body post-content mt-5 text-sm leading-6 text-gray-600"
                    >{{post.content}}</p>

                    <div class="mt-6 flex border-t border-gray-900/5 pt-6">
                      <div class="relative flex items-center gap-x-4">
                        <img
                          src="../images/logo.jpg"
                          alt="techblog logo"
                          class="h-10 w-10 rounded-full bg-gray-50"
                        />
                        <div class="text-sm leading-6">
                          <p class="card-text post-author mt-3">
                            <span
                              class="post-username font-semibold text-gray-900"
                            >{{post.user.username}}</span>

                          </p>
                          <div class="flex items-center gap-x-4 text-xs mt-1">
                            <time datetime="2020-03-16" class="text-gray-500">
                              {{format_date post.createdAt}}
                            </time>
                          </div>
                        </div>
                      </div>
                    </div>

                  </div>
                </div>
              </div>
            </article>

          {{/each}}

        {{/if}}
      </div>

    </div>
  </div>
</div>