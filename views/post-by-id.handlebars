<div class="py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:max-w-4xl">

      {{!post }}
      <div class="mt-16 space-y-20 lg:mt-20 lg:space-y-20">
        <article class="post relative isolate flex flex-col gap-8 lg:flex-row">
          <div
            class="relative aspect-[16/9] sm:aspect-[2/1] lg:aspect-square lg:w-64 lg:shrink-0"
          >

            <img
              src="../images/desktop2.jpg"
              alt="desktop image"
              class="absolute inset-0 h-full w-full rounded-2xl bg-gray-50 object-cover"
            />
            <div
              class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10"
            ></div>
          </div>

          <div class="container">
            <div class="card-header dashboard-post group relative max-w-xl">

              <h4
                class="card-title post-title mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600"
              >{{post.title}}</h4>
              <div class="card-body post-body">
                <p
                  class="card-body post-content text-sm leading-6 text-gray-600"
                >{{post.content}}</p>

                <div class="mt-6 flex border-t border-gray-900/5 pt-6">
                  <div class="relative flex items-center gap-x-4">
                    <img
                      src="../images/logo.jpg"
                      alt="techblog logo"
                      class="h-10 w-10 rounded-full bg-gray-50"
                    />
                    <div class="text-sm leading-6">
                      <p class="card-text post-author mt-3">
                        <span
                          class="post-username font-semibold text-gray-900"
                        >{{post.user.username}}</span>

                      </p>
                      <div class="flex items-center gap-x-4 text-xs mt-1">
                        <time datetime="2020-03-16" class="text-gray-500">
                          {{format_date post.createdAt}}
                        </time>
                      </div>
                    </div>
                  </div>
                </div>

              </div>
            </div>
          </div>
        </article>

        {{! add a comment }}
        <div class="comment-container flex items-start space-x-4">
          <div class="min-w-0 flex-1">
            <form class="card-body comment-form relative" id="comment-form">
              <div
                class="form-row overflow-hidden rounded-lg shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-indigo-600"
              >
                <label
                  class="form-label mt-2 mb-4 text-lg leading-8 text-gray-600"
                >Write a thoughtful comment!</label>
                <textarea
                  rows="3"
                  id="comment"
                  name="comment-body"
                  class="form-input form-control lock w-full resize-none border-blue-100 bg-transparent py-1.5 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6"
                  placeholder="Add your comment..."
                ></textarea>
                <div class="py-2" aria-hidden="true">

                  <div class="py-px">
                    <div class="h-9"></div>
                  </div>
                </div>
              </div>

              <div
                class="inset-x-0 bottom-0 flex justify-between py-2 pl-3 pr-2"
              >
                <div class="flex items-center space-x-5">
                  <div class="flex items-center"></div>
                  <div class="flex items-center"></div>
                </div>
                <div class="flex-shrink-0 py-2">
                  <button
                    type="submit"
                    class="inline-flex items-center bg-blue-600 rounded-md px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
                  >Comment</button>
                </div>
              </div>
            </form>
          </div>

        </div>

      </div>

      {{! divider  }}
      <div class="relative py-10">
        <div class="absolute inset-0 flex items-center" aria-hidden="true">
          <div class="w-full border-t border-gray-300"></div>
        </div>
        <div class="relative flex justify-center">
          <span class="bg-slate-50 px-4 py-2 text-md">Comments</span>
        </div>
      </div>

      {{! comments }}
      <div class="py-10 sm:py-10">
        <div class="mx-auto max-w-7xl px-6 lg:px-8">
          <div class="container">
            <div class="comments">
              <h4 class="comment-list"> </h4>
              {{#each post.comments}}
                <div class="card post comment-box">
                  <div class="card-body post-body">
                    <div class="card-text comment-text">
                      {{comment_content}}
                    </div>
                    <div class="relative mt-8 flex items-center gap-x-4">
                      <img
                        src="../images/logo.jpg"
                        alt="techblog logo"
                        class="h-10 w-10 rounded-full bg-gray-50"
                      />
                      <div class="text-sm leading-6">
                        <p class="font-semibold text-gray-900">
                          <a href="#">
                            <span class="absolute inset-0"></span>
                            {{user.username}}
                          </a>
                        </p>

                      </div>
                    </div>
                    <div class="flex items-center gap-x-4 text-xs pt-4">
                      <time datetime="2020-03-16" class="text-gray-500">
                        {{format_date createdAt}}</time>

                    </div>
                  </div>
                </div>
              {{/each}}
            </div>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>
<script src="/js/comment.js"></script>